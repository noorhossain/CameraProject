<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Add TextView to display the date -->
    <TextView
        android:paddingLeft="20dp"
        android:background="@color/color1"
        android:layout_gravity="center"
        android:gravity="left|center_vertical"
        android:id="@+id/date_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="30dp"
        android:text="set Date"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <!-- Add CalendarView to display the Calendar -->
    <CalendarView
        android:layout_gravity="center"
        android:id="@+id/calendar"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CalendarView>



    <Button
        android:layout_gravity="center"
        android:id="@+id/btnThisDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Set Date"/>



    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="*বি:দ্র: যে কোনো একটি তারিখের উপর ক্লিক করলে Set Date বাটন এ্যাক্টিভ হবে। এরপর Set Date বাটনে ক্লিক করতে হবে।"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


</LinearLayout>